<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.binance.com</domain>
        <domain includeSubdomains="true">api1.binance.com</domain>
        <domain includeSubdomains="true">api2.binance.com</domain>
        <domain includeSubdomains="true">api3.binance.com</domain>
        <domain includeSubdomains="true">stream.binance.com</domain>
        <domain includeSubdomains="true">data-api.binance.vision</domain>
    </domain-config>
</network-security-config>
